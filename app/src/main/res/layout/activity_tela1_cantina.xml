<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Tela_1_Cantina">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="560dp"
        android:layout_height="404dp"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtquantref"
            android:layout_width="560dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_txt"
            android:text="@string/quant_ref"
            android:textAlignment="center"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/txtcarne"
            android:layout_width="560dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_txt"
            android:drawableStart="@drawable/carne_p"
            android:text="@string/carne"
            android:textAlignment="textStart"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/txtpeixe"
            android:layout_width="560dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_txt"
            android:drawableLeft="@drawable/peixe_p"
            android:text="@string/peixe"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/txtvegetariano"
            android:layout_width="560dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_txt"
            android:drawableLeft="@drawable/veg_p"
            android:text="@string/vegetariano"
            android:textSize="12pt" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="473dp"
        android:layout_height="405dp"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_weight="20"
            android:background="@drawable/custom_txt"
            android:text="@string/ref_name"
            android:textAlignment="center"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/txtnome"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/custom_txt"
            android:text=" Nome"
            android:textAlignment="center"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_weight="1"
            android:background="@drawable/custom_txt"
            app:srcCompat="@drawable/cafe_p" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="337dp"
        android:layout_height="103dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="78dp"
        android:background="@drawable/custom_btn"
        android:onClick="Editarementa"
        android:text="Editar ementa"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/txtnomecod"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_txt"
        android:text="Digite o cÃ³digo"
        android:textAlignment="center"
        android:textSize="16pt"
        app:layout_constraintBottom_toTopOf="@+id/txtcodigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/txtcodigo"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/custom_txt"
        android:ems="10"
        android:inputType="number"

        android:maxLength="6"
        android:maxLines="1"

        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnomecod"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>