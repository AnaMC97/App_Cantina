<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Esqueci_Senha">

    <Button
        android:id="@+id/sair"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#6ECCAF"
        android:gravity="center"
        android:onClick="sair"
        android:paddingLeft="15dp"
        android:text="X"
        android:textSize="12pt"
        app:cornerRadius="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajuda3" />

    <Button
        android:id="@+id/ajuda3"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#6ECCAF"
        android:onClick="ajuda"
        android:text="\?"
        android:textSize="40dp"
        app:cornerRadius="70dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdigitenif"
        android:layout_width="477dp"
        android:layout_height="57dp"
        android:layout_marginStart="399dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="428dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-black"
        android:text="Digitar NIF"
        android:textAlignment="center"
        android:textSize="16pt"
        app:layout_constraintBottom_toTopOf="@+id/digitenif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/digitenif"
        android:layout_width="526dp"
        android:layout_height="55dp"
        android:layout_marginStart="400dp"
        android:layout_marginEnd="428dp"
        android:layout_marginBottom="12dp"

        android:autofillHints=""
        android:background="@drawable/margem_text"
        android:ellipsize="end"

        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnvalidar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnvalidar"
        android:layout_width="383dp"
        android:layout_height="72dp"
        android:layout_marginStart="480dp"
        android:layout_marginEnd="488dp"
        android:layout_marginBottom="57dp"
        android:backgroundTint="#6ECCAF"
        android:onClick="getDados"
        android:text="Validar"
        android:textAlignment="center"
        android:textSize="14pt"
        app:layout_constraintBottom_toTopOf="@+id/txtdigitecodigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/digitecodigo"
        android:layout_width="526dp"
        android:layout_height="55dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="400dp"
        android:layout_marginBottom="250dp"

        android:autofillHints=""
        android:background="@drawable/margem_text"
        android:ellipsize="end"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtdigitecodigo"
        app:layout_constraintVertical_bias="0.34"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtdigitecodigo"
        android:layout_width="477dp"
        android:layout_height="47dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="400dp"
        android:fontFamily="sans-serif-black"
        android:text="Digitar cÃ³digo"
        android:textAlignment="center"
        android:textSize="16pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnvalidar" />

    <Button
        android:id="@+id/btnvoltar"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#6ECCAF"
        android:onClick="Voltar"
        android:text="voltar"
        android:textAlignment="center"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dados"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_marginStart="242dp"
        android:layout_marginEnd="466dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnvoltar"
        app:layout_constraintTop_toBottomOf="@+id/digitecodigo" />

    <TextView
        android:id="@+id/textoajuda3"
        android:layout_width="1073dp"
        android:layout_height="663dp"
        android:text="@string/CasoEsquecaSenha"
        android:textSize="19pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>